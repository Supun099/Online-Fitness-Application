<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="horizontal"
    android:layout_weight="1.2"
    android:weightSum="10">



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:theme="@style/MyEditTextTheme2">



        <EditText
            android:id="@+id/et_cardNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Card Number"
            android:inputType="number"
            android:lines="1"
            android:paddingLeft="10dp"
            android:background="@drawable/card_payment_filed_style"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/budget_color_main"
            android:textColorHint="@color/counter_text_color"
            android:textSize="15sp"
            android:imeOptions="actionNext"/>

    </com.google.android.material.textfield.TextInputLayout>


</LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:weightSum="10"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:theme="@style/MyEditTextTheme2">

                <EditText
                    android:id="@+id/et_expireMonth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="MM"
                    android:inputType="number"
                    android:lines="1"
                    android:singleLine="true"
                    android:text=""
                    android:paddingLeft="10dp"
                    android:background="@drawable/card_payment_filed_style"
                    android:textColor="@color/budget_color_main"
                    android:textColorHint="@color/counter_text_color"
                    android:textSize="15sp"
                    android:maxLength="2"
                    android:imeOptions="actionNext"/>

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.8"
                android:theme="@style/MyEditTextTheme2">

                <EditText
                    android:id="@+id/et_expireYear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="YY"
                    android:inputType="number"
                    android:lines="1"
                    android:singleLine="true"
                    android:text=""
                    android:paddingLeft="10dp"
                    android:background="@drawable/card_payment_filed_style"
                    android:textColor="@color/budget_color_main"
                    android:textColorHint="@color/counter_text_color"
                    android:textSize="15sp"
                    android:maxLength="2"
                    android:imeOptions="actionNext"/>

            </com.google.android.material.textfield.TextInputLayout>




            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:theme="@style/MyEditTextTheme2"
                android:visibility="visible">

                <EditText
                    android:id="@+id/et_cvv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="CVV"
                    android:inputType="number"
                    android:lines="1"
                    android:singleLine="true"
                    android:text=""
                    android:paddingLeft="10dp"
                    android:background="@drawable/card_payment_filed_style"
                    android:textColor="@color/budget_color_main"
                    android:textColorHint="@color/counter_text_color"
                    android:textSize="15sp"
                    android:maxLength="3"
                    android:imeOptions="actionNext"/>

            </com.google.android.material.textfield.TextInputLayout>











        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"/>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:theme="@style/MyEditTextTheme2">

            <EditText
                android:id="@+id/et_cardHolderName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Card holder name"
                android:inputType="text"
                android:lines="1"
                android:paddingLeft="10dp"
                android:background="@drawable/card_payment_filed_style"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/budget_color_main"
                android:textColorHint="@color/counter_text_color"
                android:textSize="15sp"
                android:imeOptions="actionDone"/>

        </com.google.android.material.textfield.TextInputLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"/>
